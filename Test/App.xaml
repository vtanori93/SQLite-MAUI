<?xml version = "1.0" encoding = "UTF-8" ?>
<Application 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Test"
    x:Class="Test.App">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="Black1">#000000</Color>
            <Color x:Key="White1">#FFFFFF</Color>
            <Color x:Key="Purple1">#611f69</Color>
            <Style Class="StyleClassButton1" TargetType="Button">
                <Setter Property="HorizontalOptions" Value="FillAndExpand"/>
                <Setter Property="HeightRequest" Value="40"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="FontFamily" Value="OpenSans-Regular"/>
                <Setter Property="TextColor" Value="{StaticResource White1}"/>
                <Setter Property="BackgroundColor" Value="{StaticResource Purple1}"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
